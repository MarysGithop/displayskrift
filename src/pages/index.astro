---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import displayFont from "../assets/images/display-font.png"; // Display font billede
---
<MainLayout title="Titel">
    <article class="animated-layout">
        <section class="hero">
            <Image src={displayFont} alt="Display font" class="display-font" />
        </section>
        <section class="content">
            <h2>Spændende Sektion</h2>
            <p>Dette er en spændende sektion med noget tekst og en <Link href="https://www.kea.dk" target="_blank">link</Link>.</p>
            <Button>Klik her!</Button>
        </section>
        <section class="footer">
            <p>Tak for at besøge siden!</p>
            <Image src={thumbsup} alt="Thumbs up" class="thumbs-up" />
        </section>
    </article>
</MainLayout>